{
    "parser": "babel-eslint",
    "extends": "airbnb-base",
    "env": {
        "node": true,
        "es6": true,
        "mocha": true,
        "browser": true
    },
    "rules": {
        "linebreak-style": "off",
        "no-console": "off",
        "comma-dangle": [
            "error",
            "never"
        ],
        "class-methods-use-this": "off",
        "indent": [
            "error",
            2
        ]
    }
}